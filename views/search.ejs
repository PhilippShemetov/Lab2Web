<% include partials/_header %>

<div class="container">
    <div class="row">
        <!--FORM-->
        <div class="col-md-5 offset-md-3">
            <div class="card">
                <div class="card-body">
                    <form action="/edit/<%= task._id %>" method="post">
                        <div class="form-group">
                            <input class="form-control" type="text" name="title" placeholder="Заголовок" value="<%= task.title %>">
                        </div>
                        <div class="form-group">
              <textarea class="form-control" name="description" cols="80"
                        placeholder="Добавить запись"
              ><%= task.description %></textarea>
                        </div>
                        <div class="form-group">
                            <input class="form-control" type="text" name="marks" placeholder="Метка" value="<%= task.marks %>">
                        </div>
                        <button class="btn btn-primary" type="submit">
                            Обновить
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<% include partials/_footer%>